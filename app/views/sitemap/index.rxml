xml.instruct! :xml, :version => '1.0'
xml.tag! 'urlset', 'xmlns' => "http://www.sitemaps.org/schemas/sitemap/0.9" do
  xml.tag! 'url' do
    xml.tag! 'loc', absolute_url
  end
  xml.tag! 'url' do
    xml.tag! 'loc', absolute_url(url_for(:controller => :contacts))
  end
  @posts.each do |post|
    xml.tag! 'url' do
      xml.tag! 'loc', absolute_url(url_for(post))
    end
  end
  @tags.each do |tag|
    xml.tag! 'url' do
      xml.tag! 'loc', absolute_url(url_for(tag))
    end
  end  
end