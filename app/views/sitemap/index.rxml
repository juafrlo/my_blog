xml.instruct! :xml, :version => '1.0'
xml.tag! 'urlset', 'xmlns' => "http://www.sitemaps.org/schemas/sitemap/0.9" do
  xml.tag! 'url' do
    xml.tag! 'loc', home_url
  end
  xml.tag! 'url' do
    xml.tag! 'loc', contacts_url
  end
  @posts.each do |post|
    xml.tag! 'url' do
      xml.tag! 'loc', post_url(post)
    end
  end
  @tags.each do |tag|
    xml.tag! 'url' do
      xml.tag! 'loc', tag_url(tag)
    end
  end  
end